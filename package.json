        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-refresh": "^0.14.0",
        "react-virtuoso": "^4.3.8",
        "stylelint": "^15.6.2",
        "stylelint-config-css-modules": "^4.2.0",
        "stylelint-config-recommended": "^12.0.0",
        "webpack-cli": "^5.1.1"
