        "webpack-hot-middleware": "^2.25.3"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.22.3",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "babel-loader": "^9.1.2",
        "classnames": "^2.3.2",
